[user]
    signingKey = BEB4BD93D9FFD6A585F367AA6C787D207CCD1CFA

[core]
    editor = nvim
    autoclrf = input

[init]
    defaultBranch = master

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[fetch]
    prune = true

[push]
    default = simple

[pull]
    rebase = true

[rebase]
    autoSquash = true
    autoStash = true

[merge]
    tool = diffconflicts
    conflictStyle = diff3

[mergetool "diffconflicts"]
    cmd = diffconflicts $BASE $LOCAL $REMOTE $MERGED
    trustExitCode = true
    keepBackup = false

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[commit]
    gpgSign = true

[pass]
    signcommits = true
